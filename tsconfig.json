{
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist/",
    "lib": ["dom", "esnext", "es6", "es5"],
    "types": ["node"],
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
    "sourceMap": true,
    "declaration": true,
    "incremental": true
  },
  "include": ["src/**/*"]
}
